<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".activity.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="456dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/couple_bicycle_bro_1_" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-60dp"
        android:fontFamily="@font/inter_bold"
        android:text="Bem vindo ao Bikebem"
        android:textColor="#399D64"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="269dp"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/inter"
        android:text="Alugue bicicletas no parque ecolÃ³gico de Itaquaquecetuba"
        android:textAlignment="center"
        android:textColor="#303030"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/buttonRegistrar"
        android:layout_width="270sp"
        android:layout_height="60sp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/inter_bold"
        android:onClick="mudaTelaRegistrar"
        android:text="Registrar"
        android:textColor="#399D64"
        android:textSize="24sp"
        app:backgroundTint="#FFFFFF"
        app:iconPadding="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:strokeColor="#399D64" />

    <Button
        android:id="@+id/buttonEntrar"
        android:layout_width="270sp"
        android:layout_height="60sp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/inter_bold"
        android:onClick="mudaTelaEntrar"
        android:text="Entrar"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:backgroundTint="#399D64"
        app:cornerRadius="8sp"
        app:iconTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonRegistrar" />
</androidx.constraintlayout.widget.ConstraintLayout>