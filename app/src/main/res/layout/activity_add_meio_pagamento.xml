<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".activity.AddMeioPagamentoActivity">

    <EditText
        android:id="@+id/editTextNumeroCartao"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:backgroundTint="#399D64"
        android:ems="10"
        android:hint="Número do cartão"
        android:inputType="number"
        android:textColor="#000000"
        android:textColorHint="#8A8A8A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextNumeroVencimento"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#399D64"
        android:ems="10"
        android:hint="Data venc."
        android:inputType="date"
        android:textColor="#000000"
        android:textColorHint="#8A8A8A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextBandeiraCartao" />

    <EditText
        android:id="@+id/editTextNumeroCVV"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#399D64"
        android:ems="10"
        android:hint="CVV"
        android:inputType="number"
        android:textColor="#000000"
        android:textColorHint="#8A8A8A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumeroVencimento" />

    <Button
        android:id="@+id/button6"
        android:layout_width="300sp"
        android:layout_height="60sp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/inter_bold"
        android:text="Adicionar"
        android:onClick="cadastrarCartao"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:backgroundTint="#399D64"
        app:cornerRadius="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextBandeiraCartao"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#399D64"
        android:ems="10"
        android:hint="Bandeira do Cartão"
        android:inputType="text"
        android:textColor="#000000"
        android:textColorHint="#8A8A8A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumeroCartao" />

</androidx.constraintlayout.widget.ConstraintLayout>